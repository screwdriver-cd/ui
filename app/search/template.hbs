<div class="row">
  {{#if session.isAuthenticated}}
    <CollectionsFlyout
      @changeCollection={{action "changeCollection"}}
      class="col-md-2"
    />
    <SearchList
      @moreToShow={{moreToShow}}
      @pipelines={{pipelines}}
      @updatePipelines={{action "updatePipelines"}}
      @collections={{collections}}
      @addToCollection={{action "addToCollection"}}
      @query={{query}}
      class="col-md-10"
    />
  {{else}}
    <SearchList
      @moreToShow={{moreToShow}}
      @pipelines={{pipelines}}
      @updatePipelines={{action "updatePipelines"}}
      @collections={{collections}}
      @addToCollection={{action "addToCollection"}}
      @query={{query}}
      @name={{name}}
      @description={{description}}
      @errorMessage={{errorMessage}}
      @addNewCollection={{action "addNewCollection"}}
    />
  {{/if}}
</div>

{{outlet}}