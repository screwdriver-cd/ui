{{build-banner
  buildContainer=build.buildContainer
  duration=build.buildDuration
  buildStatus=build.status
  buildStart=build.startTime
  buildEnd=build.endTime
  buildSteps=build.steps
  buildId=build.id
  jobName=job.name
  jobId=job.id
  isAuthenticated=session.isAuthenticated
  event=event
  prEvents=prEvents
  onStart=(action "startBuild")
  onStop=(action "stopBuild")
  reloadBuild=(action "reload")
  changeBuild=(action "changeBuild")
}}

{{#if isShowingModal}}
  {{#modal-dialog clickOutsideToClose=false
    targetAttachment="center"
    translucentOverlay=true
  }}
    {{loading-view}}
  {{/modal-dialog}}
{{/if}}

{{#if build.statusMessage}}
  {{info-message message=build.statusMessage type="warning" icon="exclamation-triangle"}}
{{/if}}

{{#if stepList}}
{{build-step-collection
  buildStatus=build.status
  buildId=build.id
  buildSteps=build.steps
  buildStart=build.startTime
}}
{{/if}}
{{draggable-box
  event=event
  graphClicked=(action "graphClicked")
  tooltipData=tooltipData
  displayRestartButton=displayRestartButton
  showTooltip=showTooltip
  showTooltipPosition=showTooltipPosition
  build=build
  confirmStartBuild=(action "confirmStartBuild")
  routeParams=routeParams
  }}
{{outlet}}
