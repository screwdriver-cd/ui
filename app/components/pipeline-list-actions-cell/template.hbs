<div class="actions">
  <span class={{this.startButtonClass}} {{action "startSingleBuild" "START"}}>
    <FaIcon
      @icon="circle-play"
      @fixedWidth="true"
      @prefix="far"
      @title="Start a new build."
    />
  </span>
  <span class={{this.stopButtonClass}} {{action "stopBuild"}}>
    <FaIcon
      @icon="circle-stop"
      @fixedWidth="true"
      @prefix="far"
      @title="Stop build."
    />
  </span>
  <span class={{this.startButtonClass}} {{action "startSingleBuild" "RESTART"}}>
    <FaIcon
      @icon="rotate-right"
      @fixedWidth="true"
      @prefix="fas"
      @title="Restart from latest build."
    />
  </span>
</div>