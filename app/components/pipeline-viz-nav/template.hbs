<div class="row header">
  <h4 class="title">
    Pipeline
  </h4>
  <PowerSelect
    @search={{action "handleSearch"}}
    @searchField="name"
    @searchEnabled={{true}}
    @searchPlaceholder="Search pipeline..."
    @selected={{this.selectedPipeline}}
    @onChange={{action "handleSelectedPipeline"}} as |repo|
  >
    {{repo.name}}
  </PowerSelect>
</div>

<div class="row results">
  <h4 class="title">
    Connected Pipelines
  </h4>
  {{#each this.connectedPipelines as |pipeline|}}
    <PipelineVizRow
      @pipeline={{pipeline}}
      @selectedPipeline={{this.selectedPipeline}}
      @selectedConnectedPipeline={{this.selectedConnectedPipeline}}
      @onClick={{action "handleSelectedConnectedPipeline"}}
      @onActionClick={{action "handleSelectedPipeline"}}
    />
  {{/each}}
</div>