<h4 class="pipeline" {{action "nameClick"}}>{{fa-icon (if isOpen "minus-square" "plus-square")}} Validate Screwdriver Configuration</h4>
<div id="validator-ace-editor">
  {{ember-ace
    value=yaml
    update=(action (mut yaml))
    tabSize=4
    useSoftTabs=true
    minLines=10
    maxLines=75
    showPrintMargin=false
    useWrapMode=false
    highlightActiveLine=true
  }}
  {{yield}}
</div>