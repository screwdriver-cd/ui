<a href={{user.url}} title={{causeMessage}}>
  {{#if (eq user.username "sd:scheduler")}}
    <img src="/favicon.ico" alt="Screwdriver scheduler's avatar" onerror="this.style.visibility='hidden';">
  {{else}}
    <img src={{user.avatar}} alt="{{user.name}}'s avatar" onerror="this.style.visibility='hidden';">
  {{/if}}
  {{user.name}}
</a>
