{{#if jobs.length}}
  <div class="view" onclick={{action "selectPR"}}>
    <div class="detail">
      <div class="commit">
        <a href={{jobs.0.url}} target="_blank" rel="noopener">
          <span>
            <FaIcon @icon="code-branch" />
          </span>
          PR-{{jobs.0.group}}
        </a>
        <br />
        <span class="title">
          {{jobs.0.title}}
        </span>
        {{#if isRunning}}
          <BsButton
            @type="primary"
            class="stopButton"
            @onClick={{action stopPRBuilds jobs}}
          >
            Stop
          </BsButton>
        {{else}}
          <BsButton
            @type="primary"
            class="startButton"
            @onClick={{action startBuild jobs.0.group jobs}}
          >
            Start
          </BsButton>
        {{/if}}
      </div>
      <div class="date greyOut">
        Opened {{jobs.0.createTimeExact}}
      </div>
      <div class="by">
        <a href={{jobs.0.userProfile}} target="_blank" rel="noopener">
          {{jobs.0.username}}
        </a>
      </div>
      {{#if showJobs}}
        {{#each jobs as |job|}}
          <PipelinePrView @job={{job}} @workflowGraph={{workflowGraph}} />
        {{/each}}
      {{/if}}
    </div>
  </div>
{{/if}}