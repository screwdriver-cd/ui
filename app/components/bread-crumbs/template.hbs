<div>
  {{#each this.crumbs as |crumb index|}}
    {{#if (eq index 0)}}
      <LinkTo @route="home" params="crumb.param">
        {{crumb.name}}
      </LinkTo>
    {{else}}
      {{#if (eq crumb this.crumbs.lastObject)}}
        / {{crumb.name}}
      {{else}}
        /
        <LinkTo @route="home" params="crumb.params">
          {{crumb.name}}
        </LinkTo>
      {{/if}}
    {{/if}}
  {{/each}}
</div>
