{{#each this.banners as |banner|}}
  <div class="banner">
    <BsAlert @type={{banner.type}}>
      <div class="banner-message-container">
        <FaIcon
          @icon={{if
            (eq banner.type "info")
            "info-circle"
            "exclamation-triangle"
          }}
        />
        <div class="banner-message">
          <span>
            {{banner.message}}
          </span>
        </div>
      </div>
    </BsAlert>
  </div>
{{/each}}