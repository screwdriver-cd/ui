<td class="name">
  <Input @type="text" @size="40" @value={{newName}} />
</td>
<td class="description">
  <Input @type="text" @size="40" @value={{newDescription}} />
</td>
<td class="last-used">
  {{#if token.lastUsed}}
    {{moment-from-now token.lastUsed}}
  {{else}}
    Never used
  {{/if}}
</td>
<td class="actions">
  <button {{action "refresh"}}>
    Refresh
  </button>
  <button class={{buttonAction}} {{action "modifyToken" pipelineId}}>
    {{buttonAction}}
  </button>
</td>