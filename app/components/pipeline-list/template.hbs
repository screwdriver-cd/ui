<InfoMessage
  @message={{this.errorMessage}}
  @type="warning"
  @icon="exclamation-triangle"
/>

{{#if this.pipelines.length}}
  <div class="num-results col-xs-12 col-md-8">
    <span>
      Found {{this.pipelines.length}} child pipeline(s)
    </span>
    <button class="start-button" {{action "startAll"}}>
      Start All
    </button>
  </div>
  <ul class="col-xs-12 col-md-8">
    <table>
      <thead>
        <tr>
          <th class="appId">
            Name
          </th>
          <th class="branch">
            Branch
          </th>
          <th class="account">
            Account
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each this.pipelines as |pipeline|}}
          <tr>
            <td class="appId">
              {{!-- {{#highlight-terms query}} --}}
              <LinkTo @route="pipeline" @model={{pipeline.id}}>
                {{pipeline.appId}}
              </LinkTo>
              {{!-- {{/highlight-terms}} --}}
            </td>
            <td class="branch">
              <a href={{branch-url-encode pipeline.hubUrl}}>
                <FaIcon @icon="code-branch" />{{pipeline.branch}}
              </a>
            </td>
            <td class="account">
              <FaIcon @icon={{pipeline.scmIcon}} @prefix="fab" />
              {{pipeline.scm}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </ul>
{{else}}
  <div class="num-results">
    <span>
      No child pipeline(s) created
    </span>
  </div>
{{/if}}

{{#if this.isShowingModal}}
  <ModalDialog
    @clickOutsideToClose={{false}}
    @targetAttachment="center"
    @translucentOverlay={{true}}
  >
    <LoadingView />
  </ModalDialog>
{{/if}}