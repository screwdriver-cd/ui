<h4>
  Format: {{this.command.format}}
</h4>
{{#if this.isHabitat}}
  <div class="mode" title="This is the habitat mode.">
    <span class="label">
      Mode:
    </span>
    <span class="value">
      {{this.command.habitat.mode}}
    </span>
  </div>
  <div class="package" title="This is the habitat package.">
    <span class="label">
      Package:
    </span>
    <span class="value">
      {{this.command.habitat.package}}
    </span>
  </div>
  <div class="habitat-command" title="This is the habitat command.">
    <span class="label">
      Command:
    </span>
    <span class="value">
      {{this.command.habitat.command}}
    </span>
  </div>
{{else if this.isDocker}}
  <div class="image" title="This is the docker image.">
    <span class="label">
      Image:
    </span>
    <span class="value">
      {{this.command.docker.image}}
    </span>
  </div>
  <div class="docker-command" title="This is the docker command.">
    <span class="label">
      Command:
    </span>
    <span class="value">
      {{this.command.docker.command}}
    </span>
  </div>
{{else if this.isBinary}}
  <div class="file" title="This is the binary file.">
    <span class="label">
      File:
    </span>
    <span class="value">
      {{this.command.binary.file}}
    </span>
  </div>
{{else}}
  <span>
    Unknown type of format
  </span>
{{/if}}