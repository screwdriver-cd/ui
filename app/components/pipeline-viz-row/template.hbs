<div class="pipeline-viz-row {{if isSelectedConnectedPipeline "selected"}}">
  <div class="repo" onclick={{action "handleClick" pipeline}}>
    <i class="fa fa-check-circle success" aria-hidden="true"></i>
    <span class="repo-name" href={{pipeline.scmRepo.url}}>
      {{pipeline.name}} ({{pipeline.id}})
    </span>
  </div>

  <div class="repo-action" onclick={{action "handleActionClick" pipeline}}>
    {{#unless isSelectedPipeline}}
      <i class="glyphicon glyphicon-arrow-right"></i>
    {{/unless}}
  </div>
</div>