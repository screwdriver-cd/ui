<article class="template">
  <header>
    <h4>{{#if isDefault}}{{#link-to "templates.namespace" template.namespace}}<span class="namespace">{{template.namespace}}</span>{{/link-to}}/{{/if}}{{#link-to "templates.detail" template.namespace template.name}}<span class="name">{{template.name}}</span>{{/link-to}}</h4>
  </header>
  <p class="description">
    {{template.description}}
  </p>
  <ul>
    <li>Released by: <a href="mailto:{{template.maintainer}}">{{template.maintainer}}</a></li>
    {{#if template.lastUpdated}}<li>Last published: {{template.lastUpdated}}</li>{{/if}}
    {{#if template.labels.length}}<li>Tags: {{#each template.labels as |l|}}<span class="template-label">{{l}}</span>{{/each}}</li>{{/if}}
  </ul>
</article>
