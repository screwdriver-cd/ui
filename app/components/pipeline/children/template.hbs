<div
  id="child-pipelines-container"
  {{did-update this.update @pipelineId}}
>
  {{#if this.hasInactivePipelines}}
    {{info-message message="You have one or more inactive pipelines. You can activate these by adding back the corresponding SCM URL in the yaml configuration." type="info" icon="triangle-exclamation"}}
  {{/if}}
  <div id="start-all-button-container">
    <BsButton
      id="start-all-button"
      @type="primary"
      @outline={{true}}
      @disabled={{this.childrenPipelineStarted}}
      @onClick={{this.showStartAllChildrenModal}}
    >
      Start all child pipelines
      {{#if this.isStartAllChildrenModalOpen}}
        <Pipeline::Children::Modal::StartChildren
          @closeModal={{this.closeStartAllChildrenModal}}
        />
      {{/if}}
    </BsButton>
  </div>

  <div id="child-pipeline-table-container">
    {{#if this.showTable}}
      <Pipeline::Children::Table
        @onDestroy={{this.onTableDestroy}}
      />
    {{/if}}
  </div>
</div>
