<BsModal
  id="search-event-modal"
  @onHide={{fn @closeModal}}
  as |modal|
>
  <modal.header>
    <div class="modal-title">Search for an event</div>
  </modal.header>
  <modal.body>
    <div id="search-description">
      Search for an event by commit message, sha, author, or creator.
    </div>
    <div id="search-select">
      <select onchange={{action "setSelection" value="target.value"}} class="form-control">
      <option disabled selected> Search field </option>
        <option value="message">message</option>
        <option value="sha">SHA</option>
        <option value="creator">creator</option>
        <option value="author">author</option>
      </select>
    </div>
    <div id="search-input">
      <Input
        @type="search"
        @value={{this.searchInput}}
        autofocus={{true}}
        maxlength="500"
        placeholder="Search for an event.."
        {{on "input" this.handleInput}}
        {{on "keydown" this.handleKeyPress}}
      />
    </div>
    {{#if this.invalidSha}}
      <div class="invalid-sha">Invalid SHA.  SHA can only contain hex values.</div>
    {{/if}}

    <div id="search-results">
      <VerticalCollection
        @items={{this.searchResults}}
        @estimateHeight={{150}}
        as |event|
      >
        <Pipeline::Event::Card
          @pipeline={{@pipeline}}
          @event={{event}}
          @jobs={{@jobs}}
          @userSettings={{@userSettings}}
          @queueName="searchResults"
          @onClick={{fn @closeModal}}
        />
      </VerticalCollection>
    </div>
  </modal.body>
</BsModal>