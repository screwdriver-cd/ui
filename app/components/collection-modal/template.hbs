{{#if showModal}}
  {{! Modal to create a collection }}
  <BsModal @onHide={{action "setModal" false}} as |modal|>
    <div class="collection-modal">
      <modal.header>
        <h4 class="modal-title">
          Create New Collection
        </h4>
      </modal.header>
      <modal.body>
        {{#if errorMessage}}
          <InfoMessage
            @message={{errorMessage}}
            @type="warning"
            @icon="exclamation-triangle"
          />
        {{/if}}
        <BsForm
          class="collection-form"
          @onSubmit={{action "addNewCollection"}} as |form|
        >
          <form.group class="name">
            <label class="control-label">
              Collection Name
              <RequiredFieldMarker />
            </label>
            <input
              value={{name}}
              class="form-control"
              oninput={{action (mut name) value="target.value"}}
              type="text"
              placeholder="Name"
            />
          </form.group>
          <form.group class="description">
            <label class="control-label">
              Description
            </label>
            <textarea
              value={{description}}
              class="form-control description-input"
              oninput={{action (mut description) value="target.value"}}
              type="text"
              placeholder="Description for the collection"
            ></textarea>
          </form.group>
          <form.group class="footer buttons-float-right">
            <BsButton
              class="collection-form__cancel"
              @onClick={{action modal.close}}
              @type="default"
            >
              Cancel
            </BsButton>
            <BsButton
              @buttonType="submit"
              class="collection-form__create"
              disabled={{isSaveDisabled}}
              @type="primary"
            >
              Create
            </BsButton>
          </form.group>
        </BsForm>
      </modal.body>
    </div>
  </BsModal>
{{/if}}