<div class="left">
  <div class="back">
    {{inline-svg "arrowhead-left" class="img"}}
    <span onclick={{action (mut showCreatePipeline) false}}>
      Back
    </span>
  </div>
</div>

<div class="center {{if showQuickStartGuide "menu-open"}}">
  <PipelineCreateForm
    @isSaving={{isSaving}}
    @prUrl={{prUrl}}
    @errorMessage={{errorMessage}}
    @onCreatePipeline={{action "createPipeline"}}
    @templates={{templates}}
  />
</div>

<div class="right {{if showQuickStartGuide "menu-open"}}">
  <QuickstartGuide @isOpen={{true}} />
  {{!-- <QuickstartGuide @isOpen={{showQuickStartGuide}} /> --}}
</div>