<InfoMessage
  @message={{errorMessage}}
  @type="warning"
  @icon="exclamation-triangle"
/>
<InfoMessage @message={{successMessage}} @type="success" @icon="check" />
<div class="col-xs-12 col-md-8 user-preference">
  <section class="preference">
    <ul>
      <li>
        <div class="row">
          <div class="col-xs-10">
            <h4>
              Display Name Length
            </h4>
            <p>
              Setup your own preferred job name length to display on the workflow graph (range: 20 - 99)
            </p>
          </div>
          <div class="col-xs-2 right">
            <input
              type="number"
              class="display-job-name"
              min={{minDisplayLength}}
              max={{maxDisplayLength}}
              placeholder={{minDisplayLength}}
              value={{desiredJobNameLength}}
              oninput={{action (mut displayJobNameLength) value="target.value"}}
            />
          </div>
        </div>
      </li>
      <li>
        <div class="row">
          <div class="col-xs-9">
            <h4>
              Choose timestamp format
            </h4>
            <p>
              Choose your preferred timestamp format
            </p>
          </div>
          <div class="col-xs-3">
            <PowerSelect
              @options={{timestampOptions}}
              @renderInPlace={{true}}
              @selected={{selectedTimestampFormat}}
              @searchEnabled={{false}}
              placeholder="Select timestamp"
              @onChange={{action
                (mut selectedTimestampFormat)
              }} as |timestampFormat|
            >
              {{timestampFormat.name}}
            </PowerSelect>
          </div>
        </div>
      </li>
      <li>
        <div class="row">
          <div class="col-xs-12 right">
            <button
              disabled={{isDisabled}}
              class="reset-button"
              {{action "resetUserSettings"}}
            >
             <FaIcon @icon="refresh" /> Reset
            </button>
            <button
              disabled={{isDisabled}}
              class="blue-button"
              {{action "updateUserSettings"}}
            >
              {{#if isSaving}}
                <div>
                  Updating settings
                </div>
              {{else}}
                <div class="button-label">
                  Save
                </div>
              {{/if}}
            </button>
            {{#if isSaving}}
              <FaIcon @icon="spinner" @spin=true />
            {{/if}}
          </div>
        </div>
      </li>
    </ul>
  </section>
</div>