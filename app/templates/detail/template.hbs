{{#if this.versionOrTagFromUrl}}
  {{page-title @model.namespace '/' @model.name '@' this.versionOrTagFromUrl}}
{{else}}
  {{page-title @model.namespace '/' @model.name}}
{{/if}}

<InfoMessage
  @message={{this.errorMessage}}
  @type="warning"
  @icon="exclamation-triangle"
/>

<TemplateHeader
  @template={{this.versionTemplate}}
  @trusted={{this.trusted}}
  @isAdmin={{this.isAdmin}}
  @onUpdateTrust={{action "updateTrust"}}
  @onRemoveTemplate={{action "removeTemplate"}}
/>

<h4>
  Contents:
</h4>
<ValidatorJob
  @name={{this.versionTemplate.fullName}}
  @job={{this.versionTemplate.config}}
  @template={{this.versionTemplate}}
  @collapsible={{false}}
  @isOpen={{true}}
/>

<TemplateVersions @templates={{this.templates}} />

{{outlet}}
