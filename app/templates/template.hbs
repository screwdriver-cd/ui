{{page-title "Templates"}}

<header>
  <h4>{{if this.isPipelineTemplatePage "Pipeline" "Job"}} Templates
    <a
      href="http://docs.screwdriver.cd/user-guide/templates/{{if this.isPipelineTemplatePage "pipeline" "job"}}-templates"
      title="More Information"
      target="_blank"
      rel="noopener"
      class="doc-link float-right"
      style="font-size: 1.25rem; font-weight: normal; color: #3697f2;"
    >
      {{if this.isPipelineTemplatePage "Pipeline" "Job"}} Templates Docs
      <FaIcon @icon="question-circle" />
    </a>
  </h4>
  <div class="template-description">
    {{#if this.isPipelineTemplatePage}}
    Pipeline Templates are snippets of predefined code that people can use to replace a job definition in a screwdriver.yaml.
    {{else}}
    Job Templates are snippets of predefined code that people can use to replace a job definition in a screwdriver.yaml.
    {{/if}}
  </div>
</header>

<BreadCrumbs @crumbs={{this.crumbs}} />

<BsNav @type="tabs" as |nav|>
  <nav.item>
    <nav.link-to @route="templates.pipeline">Pipelines</nav.link-to>
  </nav.item>
  <nav.item>
    <nav.link-to @route="templates.job">Jobs</nav.link-to>
  </nav.item>
</BsNav>

{{outlet}}
